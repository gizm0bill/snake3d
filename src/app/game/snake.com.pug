ng-template( ngFor, let-segment, [ngForOf]="segments", let-i="index", let-isFirst="first", [ngForTrackBy]="trackByFn" )
  game-snake-segment(
    [speed]="speed",
    [size]="size",
    (rotation$)="isFirst ? updateCamera($event) : void()",
    [loop$]="loop4Segment(i)",
    [renderer]="renderer",
    [index]="i" )
