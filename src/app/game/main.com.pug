.timer {{seconds$|async}}
three-orbit-controls( [rotateSpeed]=1, [zoomSpeed]='1.2' )
  three-renderer( #mainRenderer )
    three-perspective-camera( [fov]=60, [near]=1, [far]=1100, positionX=6 positionY=6, positionZ=12 )
    
    three-scene
      
      three-axes-helper( size=64 )
      three-grid-helper( size=128, divisions=128 )

      three-ambient-light( color='#000000' )

      three-point-light( color='#FFFFFF', position=' 0, 50, 20 ' )
      three-point-light( color='#FFFFFF', position=' 70, 30, 50 ' )
      three-point-light( color='#FFFFFF', position=' 50, 100, -30 ' )

      //- three-mesh
        three-box-buffer-geometry( widthSegments=32, heightSegments=32 )
        game-box-material

      three-group
        three-mesh( *ngFor=" let segment of snakeSegments ", [position]="segment" )
          three-box-buffer-geometry( [width]='cubeSize', [height]='cubeSize', [depth]='cubeSize' )
          three-mesh-lambert-material

        
